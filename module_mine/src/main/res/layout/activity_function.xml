<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5fd"
    tools:context=".ui.activity.SetActivity">

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_55dp"
        android:gravity="center_horizontal"
        android:text="使用意见/建议反馈指引"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="@dimen/dp_100dp"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/dp_20dp"
        android:background="@color/color_2a2a2a"
        android:gravity="center_horizontal"
        android:textSize="@dimen/sp_16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_app_name" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15dp"
        android:layout_marginTop="@dimen/dp_20dp"
        android:layout_marginRight="@dimen/dp_15dp"
        android:gravity="top"
        android:text="  若你在使用本产品功能过程中遇到可题或有其他咨询建议，请通过以下路径获取帮助或者反馈问题：我的>向题反馈"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_version" />

</androidx.constraintlayout.widget.ConstraintLayout>