<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20dp"
        android:layout_marginTop="@dimen/dp_20dp"
        android:layout_marginEnd="@dimen/dp_15dp"
        android:layout_marginBottom="@dimen/dp_20dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_5dp"
            android:layout_toStartOf="@id/iv_select"
            android:orientation="horizontal"
            >


            <TextView
                android:id="@+id/tv_text_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColor="#666666"
                android:textSize="@dimen/sp_16sp"
                tools:text="你是"
                />

            <TextView
                android:id="@+id/tv_text_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10dp"
                android:background="@null"
                android:textColor="#66666666"
                android:textSize="@dimen/sp_16sp"
                />

            <TextView
                android:id="@+id/tv_text_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10dp"
                android:background="@null"
                android:enabled="false"
                android:textColor="#666666"
                android:textSize="@dimen/sp_16sp"
                tools:text="时间"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="@dimen/dp_30dp"
            android:layout_height="@dimen/dp_30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_foil_problem_no_select"
            />

    </RelativeLayout>

    <View
        style="@style/BaseLine"
        android:layout_marginStart="@dimen/dp_15dp"
        />

</LinearLayout>