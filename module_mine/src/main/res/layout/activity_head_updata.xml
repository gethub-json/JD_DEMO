<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_360dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_select"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50dp"
        android:layout_marginLeft="@dimen/dp_15dp"
        android:layout_marginTop="@dimen/dp_50dp"
        android:layout_marginRight="@dimen/dp_15dp"
        android:background="@drawable/bg_round_color_white_10"
        android:gravity="center"
        android:text="从相册选一张"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_head" />

    <TextView
        android:id="@+id/tv_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50dp"
        android:layout_marginLeft="@dimen/dp_15dp"
        android:layout_marginTop="@dimen/dp_50dp"
        android:background="@drawable/bg_round_color_white_10"
        android:gravity="center"
        android:text="拍一张照片"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_select" />


</androidx.constraintlayout.widget.ConstraintLayout>