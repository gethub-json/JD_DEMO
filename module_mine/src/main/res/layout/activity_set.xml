<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5fd"
    tools:context=".ui.activity.SetActivity">

    <LinearLayout
        android:id="@+id/ll_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_2dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_65dp"
            android:layout_marginLeft="@dimen/dp_15dp"
            android:layout_marginRight="@dimen/dp_15dp"
            android:drawableRight="@mipmap/ic_right_in"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="账户安全"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_15dp"
            android:layout_marginRight="@dimen/dp_15dp"
            android:background="@color/color_ced7eb" />

        <TextView
            android:id="@+id/tv_gn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_65dp"
            android:layout_marginLeft="@dimen/dp_15dp"
            android:layout_marginRight="@dimen/dp_15dp"
            android:drawableRight="@mipmap/ic_right_in"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="通用"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_15dp"
            android:layout_marginRight="@dimen/dp_15dp"
            android:background="@color/color_ced7eb" />

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_65dp"
            android:layout_marginLeft="@dimen/dp_15dp"
            android:layout_marginRight="@dimen/dp_15dp"
            android:drawableRight="@mipmap/ic_right_in"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="关于测谎app"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_15dp"
            android:layout_marginRight="@dimen/dp_15dp"
            android:background="@color/color_ced7eb" />

        <RelativeLayout
            android:id="@+id/rr_fw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_65dp">

            <TextView
                android:id="@+id/tv_fw"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_65dp"
                android:layout_marginLeft="@dimen/dp_15dp"
                android:layout_marginRight="@dimen/dp_5dp"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:text="清除缓存"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_16sp" />

            <TextView
                android:id="@+id/tv_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="888 666 3526"
                android:textColor="@color/color_999999"
                android:layout_toLeftOf="@+id/img_right"
                android:layout_centerInParent="true"
                android:textSize="@dimen/sp_16sp" />

            <ImageView
                android:id="@+id/img_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@mipmap/ic_right_in" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_15dp"
            android:layout_marginRight="@dimen/dp_15dp"
            android:background="@color/color_ced7eb" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_out_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50dp"
        android:layout_marginLeft="@dimen/dp_15dp"
        android:layout_marginTop="@dimen/dp_50dp"
        android:layout_marginRight="@dimen/dp_15dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>