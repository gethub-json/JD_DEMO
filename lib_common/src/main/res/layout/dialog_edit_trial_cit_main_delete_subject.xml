<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <RelativeLayout
        android:background="@drawable/shape_loading_bg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dp_15dp"
            android:layout_marginTop="@dimen/dp_20dp"
            android:layout_marginEnd="@dimen/dp_15dp"
            android:layout_centerHorizontal="true"
            android:text="确认要删除当前题目组吗？"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16sp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_54dp"
                android:layout_weight="2"
                android:background="#1432ce"
                android:text="取消"
                android:textColor="#80ffffff"
                />

            <View
                android:layout_width="@dimen/dp__5dp"
                android:layout_height="match_parent"
                />

            <Button
                android:id="@+id/btn_sure"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_54dp"
                android:layout_gravity="end"
                android:layout_weight="2"
                android:background="#1432ce"
                android:text="确认"
                android:textColor="#80ffffff"
                />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
