<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_frag_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/rl_main_content"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/iv_left_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:src="@mipmap/icon_back"
            />


        <TextView
            android:id="@+id/tv_middle_title"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="10"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="18sp"
            tools:text="标题"
            />

        <ImageView
            android:id="@+id/iv_right_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:src="@mipmap/icon_click"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_right_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:visibility="gone"
            tools:text="保存"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_sub_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sp_base_bg"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/tv_sub_left_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20dp"
            android:layout_marginTop="@dimen/dp_50dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18sp"
            tools:text="基本信息"
            />

    </LinearLayout>

</LinearLayout>